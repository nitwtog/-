page {
  background: #fff;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  position: relative;
  color: #323233;
  height: 100%;
}
.search-wrapper{
  width: 750rpx;
  height: 100rpx;
  background: #fff;
  position: fixed;
  top: 0;
  left: 0;
  overflow: hidden;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.2);
}
.search-input,
.search-mask-input{
  width: 560rpx;
  height: 70rpx;
  margin: 15rpx 20rpx;
  display: inline-block;
  vertical-align: middle;
  background: #F6F6F6;
  border-radius: 10rpx;
  text-align: center;
  font-size: 28rpx;
  line-height: 70rpx;
  color: #cdcdcd;
}
.search-button{
  width: 110rpx;
  height: 80rpx;
  font-size: 28rpx;
  display: inline-block;
  vertical-align: middle;
  line-height: 80rpx;
}
.search-input-icon,
.search-button-icon{
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
  vertical-align: middle;
}
.search-input-icon{
  width: 30rpx;
  height: 30rpx;
  margin-bottom: 5rpx;
  line-height: 70rpx;
  display: inline-block;
  vertical-align: middle;
}
.search-button-text{
  color: #1E8AE8;
  display: inline-block;
  vertical-align: middle;
}
.content-detail{
  /* margin-top: 100rpx; */
  /* scroll-y:true; */
  /* width: 100%; */
  font-size: 28rpx;
  background: #fff;
  
  /* top:0;
