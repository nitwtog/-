  height:89%;
}
.content-detail-title{
  font-size: 32rpx;
  font-weight: 500;
  width: 700rpx;
  padding: 20rpx 25rpx;
  background: #fff;
}
.content-detail-answer{
  width: 700rpx;
  padding: 20rpx 25rpx;
  background: #fff;
  overflow: hidden;
}
.content-detail-bottom{
  float: right;
  margin-right: 40rpx;
  margin-top: 100rpx;
  text-align: center;
  color: #999;
}
.content-detail-footer{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  text-align: center;
  color: #999;
  border-top: 1rpx solid rgba(0, 0, 0, 0.2);
  padding: 10rpx 0;
}
.content-footer-item{
  display: inline-block;
  width: 24%;
  font-size: 24rpx;
}
.content-footer-image{
  width: 40rpx;
  height: 40rpx;
}

.praise {
  width: 50px;
  height: 50px;
  background: #999;
  text-align: center;
  line-height: 50px;
  border-radius: 50%;
  position: absolute;
  left: 10px;
  transition: 0.5s;
  color: #000;
  background: #fff;
}
 
.hover_praise, .changed {
  transition: 0.5s;
  background: #ccc;
}
